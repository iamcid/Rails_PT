<!DOCTYPE html>
<html>
  <head>
    <title>Rails Physical Therapy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <center><u><h1>Rails Physical Therapy</h1></u></center>
    <div>
      <% if logged_in? %>
        <%= link_to "Home", therapist_path(id: @therapist.id) %> /
        <%= link_to "Create an appointment", new_therapist_appointment_path(@therapist.id) %> /
        <%= link_to "All appointments", appointments_path %> /
        <%= link_to "Create a patient", new_patient_path %> /
        <%= link_to "Logout", logout_path, method: "delete" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
