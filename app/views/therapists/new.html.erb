<h1>Sign Up</h1>

<p style="color: red;">
    <%= flash[:message] if flash[:message] %>
</p>

<%= form_for(@therapist) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :email %>
    <%= f.email_field :email %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Signup" %>
<% end %>

<h3>Already have an account? Please <%= link_to "Login.", login_path %></h3>